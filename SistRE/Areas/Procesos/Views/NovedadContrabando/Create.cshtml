@Scripts.Render("~/bundles/jqueryval")
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ddlContrabando").change(function () {
                $.get("/NovedadContrabando/GetProducts", { TipoProductoID: $("#ddlContrabando").val() }, function (data) {
                    // VACIAMOS EL DropDownList

                    $("#ProductoID").empty();
                    // AÑADIMOS UN NUEVO label CON EL NOMBRE DEL ELEMENTO SELECCIONADO
                    $("#ProductoID").append("<option value> -- Seleccionar Tipo " + $("#ddlContrabando option:selected").text() + " --</option>")
                    // CONSTRUIMOS EL DropDownList A PARTIR DEL RESULTADO Json (data)
                    $.each(data, function (index, row) {
                        $("#ProductoID").append("<option value='" + row.TipoProductoID + "'>" + row.Nombre + "</option>")
                        $("#TipoMedidaID").empty();
                    });
                });
            });

            $("#ProductoID").change(function () {

                $.get("/NovedadContrabando/GetTipoMedidas", { ProductoID: $("#ProductoID").val() }, function (data) {
                    // VACIAMOS EL DropDownList
                    $("#TipoMedidaID").empty();
                    // AÑADIMOS UN NUEVO label CON EL NOMBRE DEL ELEMENTO SELECCIONADO
                    $("#TipoMedidaID").append("<option value> -- Seleccionar Sub Tipo " + $("#ProductoID option:selected").text() + " --</option>")
                    // CONSTRUIMOS EL DropDownList A PARTIR DEL RESULTADO Json (data)
                    $.each(data, function (index, row) {
                        $("#TipoMedidaID").append("<option value='" + row.ID + "'>" + row.Nombre + "</option>")

                    });
                });
            });

        });

        @* Llama Show Modal *@
    function myFunction() {

        $("#ModalTitle").html("Tipo Producto ");
        $("#TipoProducto").modal();

    };

